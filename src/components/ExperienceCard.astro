---
interface Experience {
  company: string;
  companyUrl?: string;
  role: string;
  startDate: string;
  endDate: string;
  location: string;
  description: string;
}

const { company, companyUrl, role, startDate, endDate, location, description } =
  Astro.props;
---

<div>
  <h2 class="text-2xl">{company}</h2>
  <h3 class="text-muted-foreground italic font-light">
    {role}
  </h3>
  <div class="pl-5 border-l-2 border-l-white my-5 space-y-5">
    <span>
      {startDate} - {endDate}
    </span>
    <p>{description}</p>
  </div>
</div>
