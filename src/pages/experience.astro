---

<Layout title="Experience">
  <Title>Experience</Title>
  <div class="flex flex-col gap-5">
    {
      experiences.map((experience) => (
        <div>
          <h2 class="text-2xl">{experience.company}</h2>
          <h3 class="text-muted-foreground italic font-light">
            {experience.role}
          </h3>
          <div class="pl-5 border-l-2 border-l-white my-5 space-y-5">
            <span>
              {experience.startDate} - {experience.endDate}
            </span>
            <p>{experience.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
